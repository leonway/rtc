# 表示此配置适用于项目根目录下的所有文件
root = true

# 默认规则适用于所有文件
[*]
# 使用空格作为缩进样式
indent_style = space
# 每级缩进使用 2 个空格
indent_size = 2
# 使用 LF 作为换行符
end_of_line = lf
# 使用 UTF-8 字符集
charset = utf-8
# 去除行末多余的空格
trim_trailing_whitespace = true
# 在文件末尾插入新行
insert_final_newline = true
# 使用单引号
quote_type = single

# 适用于扩展名为 .md 的 Markdown 文件
[*.md]
# 不去除行末的空格
trim_trailing_whitespace = false
